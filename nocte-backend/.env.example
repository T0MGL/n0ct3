# NOCTE Backend Environment Variables
# Copy this file to .env and fill in your actual values

# Stripe Secret Key
# Get from: https://dashboard.stripe.com/test/apikeys (for testing)
# Get from: https://dashboard.stripe.com/apikeys (for production)
# Use sk_test_... for development
# Use sk_live_... for production
STRIPE_SECRET_KEY=sk_test_your_secret_key_here

# Stripe Webhook Secret (for webhook signature verification)
# Get from: https://dashboard.stripe.com/webhooks
# Starts with "whsec_..."
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Server Configuration
PORT=3000

# CORS Origins (comma-separated list)
# For development: http://localhost:8080
# For production: https://nocte.studio
CORS_ORIGIN=http://localhost:8080

# Environment
NODE_ENV=development

# n8n Webhook URL (for order notifications)
N8N_WEBHOOK_URL=https://your-n8n-instance.com/webhook/orders

# Ordefy Integration
# Webhook endpoint for order management
ORDEFY_WEBHOOK_URL=https://api.ordefy.io/api/webhook/orders/YOUR_WEBHOOK_ID
# API Key for authentication (starts with wh_)
ORDEFY_API_KEY=wh_your_api_key_here
