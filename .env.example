# NOCTE Environment Variables Template
# Copy this file to .env for local development

# Domain Configuration
# For development: http://localhost:8080
# For production: https://nocte.studio
VITE_DOMAIN=http://localhost:8080

# Meta (Facebook) Pixel Configuration
# Get your Pixel ID from: https://business.facebook.com/events_manager
# Used for conversion tracking and ROAS measurement
VITE_META_PIXEL_ID=your_meta_pixel_id_here

# Stripe Configuration
# Get your keys from: https://dashboard.stripe.com/apikeys
# Use TEST keys for development (pk_test_...)
# Use LIVE keys for production (pk_live_...)
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here

# Backend API URL
# For local development: http://localhost:3000/api
# For production: https://api.nocte.studio
VITE_API_URL=http://localhost:3000/api

# Product Configuration
# Price in the smallest currency unit (e.g., 280000 = 280,000 Gs)
VITE_PRODUCT_PRICE=280000
VITE_PRODUCT_CURRENCY=pyg
VITE_PRODUCT_NAME="NOCTEÂ® Red-Tinted Glasses"

# Environment
# Use 'development' for local dev, 'production' for production builds
VITE_ENV=development

# Analytics (if using Google Analytics)
# VITE_GA_MEASUREMENT_ID=G-XXXXXXXXXX
